<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Amount</th>
                <th>Description</th>
                <th>Category</th>
                <th>Owner</th>
                <th>Time of creating</th>
                
                
            </tr>
        </thead>
        <tbody> 
            @each(expense in expenses)
            <tr>
                <td>{{expense.title}}</td>
                <td>{{expense.description}}</td>
                <td>{{expense.category}}</td>
                <td>{{expense.owner}}</td>
                <td>{{expense.timestamps}}</td>
                
                
                <td>
                    
                 <form action="change/{{expense._id}}" method="get">
                    <input type="submit" value="Edit" />
                </form>
            </td>
            <td>
                   <form action="delete/{{expense._id}}" method="GET">
                    <input type="submit" value="Delete" />
                </form>
                </td>
            </tr>
            @endeach
        </tbody>
    </table>
</body>
</html>